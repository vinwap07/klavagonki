<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Клавагонки" Height="600" Width="800"
        Closing="Window_Closing">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Панель подключения -->
        <Border Grid.Row="0" Background="#2b579a" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Сервер:" Foreground="White" VerticalAlignment="Center"/>
                <TextBox x:Name="txtServerIp" Text="127.0.0.1" Width="100" Margin="5,0"/>
                <TextBlock Text="Порт:" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="txtServerPort" Text="8888" Width="50" Margin="5,0"/>
                <TextBlock Text="Имя:" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="txtPlayerName" Text="Игрок1" Width="100" Margin="5,0"/>
                <Button x:Name="btnConnect" Content="Подключиться" Click="btnConnect_Click" 
                        Margin="10,0" Padding="10,5"/>
                <Button x:Name="btnDisconnect" Content="Отключиться" Click="btnDisconnect_Click"
                        IsEnabled="False" Padding="10,5"/>
            </StackPanel>
        </Border>
        
        <!-- Основное содержимое - TabControl -->
        <TabControl Grid.Row="1" x:Name="tabControl">
            
            <!-- Вкладка Лобби/Комнаты -->
            <TabItem Header="Лобби">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Панель действий -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button x:Name="btnCreateRoom" Content="Создать комнату" 
                                Click="btnCreateRoom_Click" Padding="10,5" Margin="0,0,10,0"
                                IsEnabled="False"/>
                        <Button x:Name="btnRefreshRooms" Content="Обновить список" 
                                Click="btnRefreshRooms_Click" Padding="10,5"
                                IsEnabled="False"/>
                    </StackPanel>
                    
                    <!-- Список комнат -->
                    <ListView Grid.Row="1" x:Name="listRooms" Margin="10" SelectionChanged="listRooms_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Создатель" Width="150" DisplayMemberBinding="{Binding HostName}"/>
                                <GridViewColumn Header="Игроков" Width="80" DisplayMemberBinding="{Binding PlayerCount}"/>
                                <GridViewColumn Header="Статус" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding IsPlaying, Converter={StaticResource StatusConverter}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <!-- Панель присоединения -->
                    <Border Grid.Row="2" Background="#f0f0f0" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Выбрана комната:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtSelectedRoom" Text="нет" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button x:Name="btnJoinRoom" Content="Присоединиться" Click="btnJoinRoom_Click"
                                    Margin="20,0" Padding="10,5" IsEnabled="False"/>
                            <Button x:Name="btnReady" Content="Готов!" Click="btnReady_Click"
                                    Padding="10,5" IsEnabled="False" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Вкладка Игра -->
            <TabItem Header="Игра" x:Name="tabGame" IsEnabled="False">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Информация о комнате -->
                    <Border Grid.Row="0" Background="#2b579a" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="White">
                                <Run Text="Комната:"/>
                                <Run x:Name="txtCurrentRoom" Text="-" FontWeight="Bold"/>
                                <Run Text="| Игроков онлайн:"/>
                                <Run x:Name="txtOnlineCount" Text="0"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <!-- Текст для набора -->
                    <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="15"
                            Background="#fafafa">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="txtRaceText" TextWrapping="Wrap" FontSize="16" 
                                       FontFamily="Consolas" Text="Ожидаем начало игры..."/>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Прогресс игроков -->
                    <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="10">
                        <ItemsControl x:Name="playersProgress">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,2" Padding="5" Background="#f5f5f5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding PlayerName}" FontWeight="Bold"/>
                                            <ProgressBar Grid.Column="1" Value="{Binding Progress}" 
                                                         Maximum="100" Height="20" Margin="10,0"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Progress, StringFormat={}{0}%}" 
                                                       HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                    
                    <!-- Статус и управление -->
                    <Border Grid.Row="3" Background="#e6f2ff" Padding="10">
                        <StackPanel>
                            <TextBlock x:Name="txtGameStatus" Text="Ожидаем других игроков..." 
                                       FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="txtInput" Width="400" Height="30" FontSize="14"
                                         IsEnabled="False" KeyDown="txtInput_KeyDown"/>
                                <Button x:Name="btnLeaveGame" Content="Покинуть игру" 
                                        Click="btnLeaveGame_Click" Margin="10,0" Padding="10,5"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
        </TabControl>
        
        <!-- Статус бар -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="txtConnectionStatus" Text="Не подключено"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="txtTypingSpeed" Text="Скорость: 0 зн/мин"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="txtErrors" Text="Ошибок: 0"/>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Window>